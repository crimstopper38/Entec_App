<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/sculpture_park">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learning Options"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#FFFFFF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_below="@id/text_view_title"
        android:layout_above="@id/learning_options_back_button"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/learning_options_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miami Dade College offers various attendance options to fit your needs:"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/option_in_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. MDC In-person\n   - Description: Take classes on campus with scheduled meeting days and times."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/option_blended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. MDC Blended\n   - Description: A mix of online and traditional in-person instruction with a combination of scheduled and flexible days and times."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/option_mdc_live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. MDC LIVE\n   - Description: Take virtual classes from anywhere and interact in real time with professors and classmates on scheduled days and times."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/option_mdc_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. MDC Online\n   - Description: Online classes with the option to complete coursework on your own time and at your own pace, while still meeting weekly and term deadlines."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/learning_options_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note: Classes that require real-time attendance (either in-person or virtually) will include meeting days and times. Classes that donâ€™t display meeting days and times do not require real-time attendance."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/learning_options_back_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp" />
</RelativeLayout>
