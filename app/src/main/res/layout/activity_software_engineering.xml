<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/img_software_engineering">

    <TextView
        android:id="@+id/text_software_engineering_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information Systems Technology - Software Engineering"
        android:textSize="29sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:background="#ffffff"/>

    <ScrollView
        android:id="@+id/scroll_software_engineering_content"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_software_engineering_title"
        android:layout_above="@id/button_back_software_engineering"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/text_software_engineering_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="The Bachelor of Science in Information Systems Technology with a Software Engineering Concentration at Miami Dade College provides students with critical skills in software design, programming, data structures, and systems analysis. The curriculum covers software engineering principles, computer architecture, data structures, and algorithms."
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/text_software_engineering_additional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Graduates are prepared for roles such as Software Developer, Computer Programmer, and IT Manager. The program emphasizes hands-on experience and prepares students for industry certifications."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/text_software_engineering_classes_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Major Classes You May Take"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_software_engineering_class_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Software Engineering I\nIntroduction to software development methodologies."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_software_engineering_class_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Data Structures\nStudy of data organization and manipulation."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_software_engineering_class_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Design and Analysis of Algorithms\nTechniques for designing efficient algorithms."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_software_engineering_class_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Software Engineering II\nAdvanced concepts in software development."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_software_engineering_class_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Computer Architecture\nUnderstanding the structure of computer systems."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/more_info_software_engineering"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For more information about this program, please visit our website at: \nwww.mdc.edu/softwareengineering/"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/sweqr"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_back_software_engineering"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp" />
</RelativeLayout>
