<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/img_ai">

    <TextView
        android:id="@+id/text_ai_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Applied Artificial Intelligence"
        android:textSize="24sp"
        android:background="#ffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#000000" />

    <ScrollView
        android:id="@+id/scroll_ai_content"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_ai_title"
        android:layout_above="@id/button_back_ai"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/text_ai_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Miami Dade College offers a Bachelor of Science in Applied Artificial Intelligence, designed to equip students with practical skills in AI technologies such as machine learning, natural language processing, and computer vision. The program emphasizes ethical standards and socially responsible practices in AI implementation, preparing graduates to develop intelligent systems that enhance business processes and decision-making."
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/text_ai_additional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developed in collaboration with industry experts, the curriculum includes hands-on projects and a capstone experience, ensuring that students gain real-world experience. MDC's partnerships with tech companies provide exposure to current industry challenges and applications, enhancing the educational experience. Graduates are prepared for roles such as AI Analysts, Natural Language Processing Specialists, and Machine Learning Specialists."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/text_ai_classes_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Major Classes You May Take"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_ai_class_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• CAI 1001C: Artificial Intelligence (AI) Thinking\nAn introduction to the fundamentals of Artificial Intelligence concepts and applications."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_ai_class_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• CAI 2100C: Machine Learning Foundations \nLearn the foundational principles of supervised and unsupervised machine learning algorithms."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_ai_class_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• CAI 3303C: Natural Language Processing \nExplore NLP techniques for text analysis, language modeling, and sentiment analysis."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_ai_class_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• CAI 4505C: Artificial Intelligence \nAdvanced topics in Artificial Intelligence systems, decision-making, and AI algorithms."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_ai_class_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• CAI 4950C: Artificial Intelligence Capstone \nA comprehensive real-world AI project integrating theoretical and practical knowledge."
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />
            <TextView
                android:id="@+id/more_info"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For more information about this program, please visit our website at: \nwww.mdc.edu/appliedaibs/"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/aiqr"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_back_ai"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp" />
</RelativeLayout>
