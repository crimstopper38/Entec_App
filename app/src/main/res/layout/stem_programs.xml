<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img2"
    android:padding="16dp">

    <Button
        android:id="@+id/button_back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6200EE"
        android:padding="20dp"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp" />

    <GridLayout
        android:id="@+id/grid_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_below="@id/button_back"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/button_ai"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:text="Artificial Intelligence"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:padding="16dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/button_software_engineering"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:text="Software Engineering"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:padding="16dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/button_data_analytics"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:text="Data Analytics"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:padding="16dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/button_cybersecurity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:text="Cybersecurity"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:padding="16dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/button_networking"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:text="Networking"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:padding="16dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/button_electrical_engineering"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:text="Electrical Engineering"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:padding="16dp"
            android:elevation="4dp" />

    </GridLayout>
</RelativeLayout>
